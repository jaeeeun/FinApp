<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame_guide"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptGuideFragment">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_receipt_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="16dp"
            android:text="프리랜서를 위한 절세 팁!"
            />
        <TextView
            android:id="@+id/tv_receipt_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="16dp"
            android:text="경비증빙도우미로 잃어버리기 \n쉬운 영수증을 정리해보세요!"
            />
        <TextView
            android:id="@+id/tv_receipt_tip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:text="내 집이 작업장이 되고, 내 생활이 곧 사업이 되는 프리랜서 분들! 공기처럼 지출하던 월세, 통신비 등이 경비처리 될 수 있다는 사실을 아셨나요?\n경비증빙 없이 단순 추계신고를 하는 경우, 불리한 경비율로 많은 세금을 내게 됩니다. 그간 놓치고 계셨던 경비증빙을 프리치와 함께 확실히 관리하세요!"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:src="@drawable/tax_info"

            />

        <Button
            android:id="@+id/bt_receiptregister"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginTop="160dp"
            android:background="#00E4E4E4"
            android:hapticFeedbackEnabled="false"
            android:text="경비증빙 도우미 시작하기"
            android:textAppearance="@style/CaptionPrimaryLeft"
            android:textColor="#288AF3"
            android:textSize="20sp"
            />

    </LinearLayout>

</FrameLayout>