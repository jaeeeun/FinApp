<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectContractFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal|top|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:text="영상물 지급 계약" />

        <ImageView
            android:layout_width="307dp"
            android:layout_height="65dp"
            android:paddingLeft="13dp"
            android:src="@drawable/contract_0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:text="제 1조      목적" />

        <ImageView
            android:layout_width="307dp"
            android:layout_height="88dp"
            android:paddingLeft="13dp"
            android:src="@drawable/contract_1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:text="제 2조      계약기간" />

        <ImageView
            android:layout_width="307dp"
            android:layout_height="88dp"
            android:paddingLeft="13dp"
            android:src="@drawable/contract_2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:text="제 3조      계약금액" />

        <ImageView
            android:layout_width="307dp"
            android:layout_height="168dp"
            android:paddingLeft="13dp"
            android:src="@drawable/contract_3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:text="첨부된 계약서" />


    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->



    <Button
        android:id="@+id/project_contract_button"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:background="@color/blue_violet"
        android:text="프로젝트 생성"
        android:textColor="@color/white_three"
        android:textSize="19.7sp" />

</FrameLayout>