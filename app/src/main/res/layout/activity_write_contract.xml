<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_project_contract"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        tools:text="     프로젝트 계약" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@android:drawable/btn_dropdown"
        android:layout_marginLeft="8dp" />
    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton12"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_client"
            android:layout_width="98dp"
            android:layout_height="43dp"
            android:layout_marginLeft="16dp"
            android:text="TextView"
            android:layout_marginRight="8dp"
            android:textSize="24sp"
            tools:text="의뢰자" />

        <Spinner
            android:id="@+id/spinner_client"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_freelancer"
            android:layout_width="98dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            tools:text="공급자"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp" />


        <Spinner
            android:id="@+id/spinner_freelancer"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_project_explain"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        tools:text="작업 설명" />

    <Spinner
        android:id="@+id/spinner_project_explain"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_contractperiod"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        tools:text="계약 기간" />


    <Spinner
        android:id="@+id/spinner_contract_period"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        tools:text="금액" />


    <Spinner
        android:id="@+id/spinner_sum"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_else"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        tools:text="기타" />

    <Spinner
        android:id="@+id/spinner_else"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/textView17"
        android:layout_width="303dp"
        android:layout_height="78dp"
        android:text="갑돌이와 을식이는 계약건명에 명시된 업무작업을 수행하기 위해 다음과 같이 계약을 체결한다."
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="68dp"
        android:layout_height="34dp"
        android:layout_marginBottom="152dp"
        android:text="CheckBox"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp" />

    </LinearLayout>


    <Button
        android:id="@+id/bt_build_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Button"
        tools:text="프로젝트 생성"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="8dp" />

</LinearLayout>
